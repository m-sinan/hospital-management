<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Staffs</title>
  <link rel="stylesheet" href="/doctorp/css/styles.css" />
  <link rel="stylesheet" href="/adminp/css/style.css">
  <link rel="stylesheet" href="/adminp/css/card.css">
</head>

<body>
  <%- include('admin-sidebar') %>
    <div class="container pt-5">
      <div class="card">
        <div class="card-body">
          <h1 class="fw-semibold mb-4">staffs Adding</h1>
          <div class="card">
            <div class="card-body">
              <form method="POST" action="/asta" enctype="multipart/form-data">
                <div class="row mb-3">
                  <div class="col-lg-6 col-md-6 col-sm-12">
                    <label class="form-label">staffs Name</label>
                    <input type="text" class="form-control" name="sname" id="dname">
                  </div>
                  <div class="col-lg-6 col-md-6 col-sm-12">
                    <label class="form-label">staffs photo</label>
                    <input type="file" class="form-control" name="simg">
                  </div>
                </div>
                <div class="row mb-3">
                  <div class="col-lg-6 col-md-6 col-sm-12">
                    <label class="form-label">staffs Department </label>
                    <input type="text" class="form-control" name="sdepartment">
                  </div>
                  <div class="col-lg-6 col-md-6 col-sm-12">
                    <label class="form-label">staffs Address</label>
                    <textarea class="form-control" id="productDescription" name="saddress" rows="2"
                      cols="50"></textarea>
                  </div>
                </div>
                <div class="row mb-3">
                  <div class="col-lg-6 col-md-6 col-sm-12">
                    <label class="form-label">staffs Email</label>
                    <input type="email" class="form-control" name="semail">
                  </div>
                  <div class="col-lg-6 col-md-6 col-sm-12">
                    <label class="form-label">staffs Bloodgroup</label>
                    <select class="form-select mb-3" name="sbloodgroup" aria-label="Default select example" id="Blood">
                      <option selected class="text-dark"></option>
                      <option value="A+" class="text-dark">A+</option>
                      <option value="A-" class="text-dark">A-</option>
                      <option value="B+" class="text-dark">B+</option>
                      <option value="B-" class="text-dark">B-</option>
                      <option value="o+" class="text-dark">o+</option>
                      <option value="o-" class="text-dark">o-</option>
                      <option value="AB+" class="text-dark">AB+</option>
                      <option value="AB-" class="text-dark">AB-</option>
                      <option value="OB+" class="text-dark">OB+</option>
                      <option value="OB-" class="text-dark">OB-</option>
                    </select>
                  </div>
                </div>
                <div class="row mb-3">
                  <div class="col-lg-4 col-md-4 col-sm-12">
                    <label class="form-label">staffs Phone</label>
                    <input type="number" class="form-control" name="sphone">
                  </div>
                  <div class="col-lg-4 col-md-4 col-sm-12">
                    <label class="form-label">Shift Schedule</label>
                    <select class="form-select mb-3" name="stiming" aria-label="Default select example" id="Blood">
                      <option selected class="text-dark"></option>
                      <option value="Morning Shift" class="text-dark">Morning Shift</option>
                      <option value="Evening Shift" class="text-dark">Evening Shift</option>
                    </select>
                  </div>
                  <div class="col-lg-4 col-md-4 col-sm-12">
                    <label class="form-label">Sex</label>
                    <select class="form-select mb-3" name="ssex" aria-label="Default select example" id="Blood">
                      <option selected class="text-dark"></option>
                      <option value="male" class="text-dark">Male</option>
                      <option value="female" class="text-dark">Female</option>
                    </select>
                  </div>
                </div>
                <button type="submit" class="btn btn-success" value="Submit">Add</button>
                <a href="" class="btn btn-danger">Reset</a>
              </form>
            </div>
          </div>
        </div>
      </div>
      <div class="row row-cols-1 row-cols-md-3 g-4" style="margin: 0;">
        <% ast.forEach(staffs => { %>
          <div class="col-lg-4 col-md-6 col item pb-5">
            <div class="card doctor-card h-100">
              <img src="/adminp/image/staff/<%= staffs.simg %>" alt="Doctor Image" class="rounded"  width="100" data-bs-toggle="modal"
              data-bs-target="#staticBackdrop<%= staffs._id %>">
              <div class="card-body pt-2 pb-0" data-bs-toggle="modal"
              data-bs-target="#staticBackdrop<%= staffs._id %>">
                <h3 class="fw-bolder text-center"><span class="fs-4"></span>
                  <%= staffs.sname %>
                </h3>
                <hr>
                <h6 class="card-title fw-bolder text-center fs-4 pb-0">
                  <%= staffs.sdepartment %> department
                </h6>
              </div>
              <hr>
              <div class="d-flex justify-content-between p-3">
                <button type="submit" class="btn btn-primary" value="Submit">Edit</button>
                <!-- <form action="/deletesta" method="POST">
                  <input type="hidden" value="<%= staffs._id %>" name="staffId">
                  <a type="submit" class="btn btn-danger">delete</a>
                </form> -->
              </div>
            </div>
          </div>

          

          <!-- molel -->
          <div class="modal fade text-center" id="staticBackdrop<%= staffs._id %>" data-bs-backdrop="static"
            data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <button type="button" class="bg-success btn-close p-2" data-bs-dismiss="modal" aria-label="Close"></button>
            <div class="modal-dialog pt-2">
              <div class="modal-content">
                <div class="card p-4" data-bs-toggle="modal"
                  data-bs-target="#staticBackdrop<%= staffs._id %>">
                  <img src="/adminp/image/staff/<%= staffs.simg %>" alt="Doctor Image" class="rounded"
                     width="100">
                  <div class="modal-body pb-0">
                    <h2 class="fw-bolder text-center"><span class="fs-4"></span>
                      <span class="text-end"><%= staffs.sname %></span>
                    </h2>
                    <hr>
                    <div class="row text-center">
                      <div class="col-lg-12">
                        <div class="row">
                          <div class="col-lg-12 col-md-12 col-sm-12 d-flex justify-content-between">
                            <span class="fs-5">Ddepartment:</span>
                            <span class="text-end"><%= staffs.sdepartment %></span>
                          </div>
                        </div>
                        <div class="row">
                          <div class="col-lg-12 col-md-12 col-sm-12 d-flex justify-content-between">
                            <span class="fs-5">Address:</span>
                              <span class="text-end"><%= staffs.saddress %></span>
                          </div>
                        </div>
                        <div class="row">
                          <div class="col-lg-12 col-md-12 col-sm-12 d-flex justify-content-between">
                            <span class="fs-5">Email:</span>
                            <span class="text-end"><%= staffs.semail %></span>
                          </div>
                        </div>
                        <div class="row">
                          <div class="col-lg-12 col-md-12 col-sm-12 d-flex justify-content-between">
                            <span class="fs-5">Bloodgroup:</span>
                            <span class="text-end"><%= staffs.sbloodgroup %></span>
                          </div>
                        </div>
                        <div class="row">
                          <div class="col-lg-12 col-md-12 col-sm-12 d-flex justify-content-between">
                            <span class="fs-5">Phone:</span>
                            <span class="text-end"><%= staffs.sphone %></span>
                          </div>
                        </div>
                        <div class="row">
                          <div class="col-lg-12 col-md-12 col-sm-12 d-flex justify-content-between">
                            <span class="fs-5">Timing:</span>
                            <span class="text-end"><%= staffs.stiming %></span>
                          </div>
                        </div>
                        <div class="row">
                          <div class="col-lg-12 col-md-12 col-sm-12 d-flex justify-content-between">
                            <span class="fs-5">Sex:</span>
                            <span class="text-end"><%= staffs.ssex %></span>
                          </div>
                        </div>
                      </div>
                    </div>
                    <hr>
                    <div class="row-cols-1 pb-3">
                      <button type="button" class="btn btn-lg btn-secondary"  data-bs-dismiss="modal" aria-label="Close">Close</button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <% }); %>
      </div>

    </div>
    <script src="/doctorp/libs/jquery/dist/jquery.min.js"></script>
    <script src="/doctorp/js/app.min.js"></script>
    <script src="/doctorp/libs/jquery/dist/jquery.min.js"></script>
    <script src="/doctorp/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/doctorp/js/sidebarmenu.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"></script>
</body>

</html>