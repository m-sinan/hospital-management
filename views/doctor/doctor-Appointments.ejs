</head>

<body>
  <%- include('Sidebar') %>
    <div class="container-fluid">
      <div class="card">
        <div class="card-body">
          <h1 class="fw-semibold mb-4 fw-bolder">Today Appointments</h1>
          <div class="card">
            <div class="card-body">
              <table class="table">
                <thead>
                  <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Patient Name</th>
                    <th scope="col">Age</th>
                    <th scope="col">Phone</th>
                    <th scope="col">Problem</th>
                    <th scope="col">Date</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <th scope="row">101</th>
                    <td>muhamed anas</td>
                    <td>20</td>
                    <td>8078918423</td>
                    <td>normal Fever</td>
                    <td>01/01/2024</td>
                    <td><button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#exampleModal" data-bs-whatever="@fat"><i class="ti ti-check"></i></button></td>
                </tbody>
              </table>
              <!-- Modal -->
              <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog modal-fullscreen p-4">
                  <div class="modal-content px-5 py-3">
                    <div class="modal-header">
                      <h1 class="modal-title fs-5 fw-bolder bg-info text-white p-2" id="exampleModalLabel">MUHAMED ANANS</h1>
                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                      <form>
                        <div class="mb-3">
                          <label for="recipient-name" class="col-form-label">Problems </label>
                          <input type="text" class="form-control" id="recipient-name">
                        </div>
                        <div class="mb-3">
                          <label for="message-text" class="col-form-label">Description/Recommended</label>
                          <textarea class="form-control" id="message-text"></textarea>
                        </div>
                        <h4 class="text-center p-4 pb-2 fw-bolder">Medicine</h4>
                        <div class="row">
                          <div class="col-10">
                            <div class="mb-3">
                              <label for="recipient-name" class="col-form-label">Morning  </label>
                              <input type="text" class="form-control" id="recipient-name">
                            </div>
                          </div>
                          <div class="col-2 p-5">
                            <div class="form-check">
                              <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                              <label class="form-check-label" for="flexCheckDefault">
                                After the food
                              </label>
                            </div>
                          </div>
                        </div>
                        <div class="row">
                          <div class="col-10">
                            <div class="mb-3">
                              <div class="mb-3">
                                <label for="recipient-name" class="col-form-label">Afternoon</label>
                                <input type="text" class="form-control" id="recipient-name">
                              </div>
                            </div>
                          </div>
                          <div class="col-2 p-5">
                            <div class="form-check">
                              <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                              <label class="form-check-label" for="flexCheckDefault">
                                After the food
                              </label>
                            </div>
                          </div>
                        </div>
                        <div class="row">
                          <div class="col-10">
                            <div class="mb-3">
                              <label for="recipient-name" class="col-form-label">Night</label>
                              <input type="text" class="form-control" id="recipient-name">
                            </div>
                          </div>
                          <div class="col-2 p-5">
                            <div class="form-check">
                              <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                              <label class="form-check-label" for="flexCheckDefault">
                                After the food
                              </label>
                            </div>
                          </div>
                          <div class="row">
                            <div class="form-check">
                              <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1" checked>
                              <label class="form-check-label" for="exampleRadios1">
                                High
                              </label>
                            </div>
                            <div class="form-check">
                              <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2" value="option2">
                              <label class="form-check-label" for="exampleRadios2">
                                Low
                              </label>
                            </div>
                            <div class="form-check">
                              <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios3" value="option3">
                              <label class="form-check-label" for="exampleRadios3">
                                Medium
                              </label>
                            </div>
                            <div class="form-check">
                              <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios3" value="option3">
                              <label class="form-check-label" for="exampleRadios3">
                                Critical
                              </label>
                            </div>
                          </div>
                        </div>
                      </form>
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                      <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Done</button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="/docterp/libs/jquery/dist/jquery.min.js"></script>
    <script src="/public/adminp/java/java.js"></script>
    <!-- page -->
    <script src="/docterp/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/docterp/js/sidebarmenu.js"></script>
    <script src="/docterp/js/app.min.js"></script>
    <script src="/docterp/libs/apexcharts/dist/apexcharts.min.js"></script>
